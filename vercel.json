{
  "version": 2,
  "builds": [
    { "src": "api/index.py",             "use": "@vercel/python" },
    { "src": "web-app/package.json",      "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)",    "dest": "api/index.py" },

    { "src": "/_next/(.*)",  "dest": "web-app/_next/$1" },
    { "src": "/favicon.ico", "dest": "web-app/favicon.ico" },

    { "src": "/",           "dest": "web-app/src/app/" },

    { "src": "/(.*)",       "dest": "web-app/$1" }
  ]
}
